            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <activity
            android:name="com.yujieshipin.crm.activity.RegisterActivity"
            android:label="@string/label_register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTask"
            android:exported="true">
            
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.StudentInfoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <activity
            android:name="com.yujieshipin.crm.activity.SysSettingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.CommunicationActivity"
            android:screenOrientation="portrait"
