        </activity>


        <activity
            android:name="com.yujieshipin.crm.activity.TabSchoolActivtiy"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.SchoolActivity"
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.SchoolDetailActivity"
            android:screenOrientation="portrait" 
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|keyboard|screenSize">
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.ClassDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity
            android:name="com.yujieshipin.crm.activity.CurriculumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yujieshipin.crm.activity.CallClassActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yujieshipin.crm.activity.CourseClassActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.yujieshipin.crm.activity.TestClassActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yujieshipin.crm.activity.SummaryClassActivity"
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity
            android:name="com.yujieshipin.crm.activity.AlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yujieshipin.crm.activity.ImageFolderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yujieshipin.crm.activity.ImagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yujieshipin.crm.activity.WebSiteActivity"
            android:screenOrientation="portrait" android:hardwareAccelerated="true"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation" >
        </activity>
		<activity
            android:name="com.yujieshipin.crm.activity.ShowPersonInfo"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.ContactsSelectActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.LocalDocument"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.AlbumFlowActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
		<activity
            android:name="com.yujieshipin.crm.activity.AlbumShowImagePage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.yujieshipin.crm.activity.AlbumShowImageDetail"
            android:screenOrientation="portrait" >
