<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip">
    <ImageView 
        android:id="@+id/test_image"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_centerVertical="true"
        android:contentDescription="@null"/>
    <ImageView 
        android:id="@+id/test_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/classroom_course_next"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:contentDescription="@null"/>
    <LinearLayout 
        android:layout_toLeftOf="@id/test_next"
        android:layout_toRightOf="@id/test_image"
        android:layout_marginLeft="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView 
            android:id="@+id/test_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#000000"
            android:text="马列政治期中测试题目"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/test_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a6a6a6"
                android:textSize="@dimen/text_size_micro"
                android:text="共78道题目"
                android:visibility="gone"
                />
            <TextView 
                android:id="@+id/test_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="开始答题"
                android:background="@drawable/test_start"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_micro"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>